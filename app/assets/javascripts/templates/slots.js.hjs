{{partial 'drilldown'}}
<div class="sixteen columns">
  <ul class="trucks">
  {{#each filteredSlots}}
    <li class="row">
      <div class="alpha eight columns info-container">
        {{#link-to 'truck' truck}}<h3>{{truck.name}}</h3>{{/link-to}}
        <p>{{neighborhood}} on <em>{{weekday}} at {{period}}</em></p>
      </div>
      <div class="omega eight columns more-link-container">
        <p>{{#link-to 'truck' truck}}More information &rarr;{{/link-to}}</p>
      </div>
    </li>
  {{/each}}
  </ul>
</div>
